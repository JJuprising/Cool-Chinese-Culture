/* pages/essays_detail/index.wxss */
Page {
  padding-bottom: 100rpx;
}
.essay_title {
  padding-top: 20rpx;
  padding-bottom: 100rpx;
  padding-left: 30rpx;
  padding-right: 40rpx;
  border-top: 5px solid #dedede;
  font-size: 50rpx;
  width:100%;
  font-weight: bolder;
  float: left;
  font-family: cursive;
}
.essay_img {
  padding: 20rpx 10rpx;
  text-align: center;
}
.essay_detail {
  margin: 0;
  padding-left: 30rpx ;
  padding-right: 40rpx;
  line-height: 1.5em;
  font-family: cursive;
  font-size: 20px;
  color: #000000;
}
.btm_tool {
  border-top: 1rpx #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
}
.btm_tool .tool_comment {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.btm_tool .tool_item {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.btm_tool .tool_item .icon-shoucang1 {
  color: orange;
}
.btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.comment{
    border: rgba(146, 146, 146, 0.247) 1rpx solid;
    height: 200rpx;
}
.userinfo-avatar {
    overflow: hidden;
    width: 80rpx;
    height: 80rpx;
    margin: 20rpx 20rpx 5rpx 20rpx;
    border-radius: 50%;
}
.date{
    color: rgb(163, 163, 163);
    float: right;
    font-weight: lighter;
    font-size: smaller;
}
.name{
    padding-left: 30rpx;
    font-weight: bold;

}
.user{
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 25%;
}
.content{
    width: 74%;
    margin-top: 50rpx;
    height: 140rpx;
    font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}
.row{
    display: flex;
    flex-direction: row;
}
.button{
    background-color: rgba(223, 223, 223, 0.164);
}
.input{
    height: 80rpx;
    margin-left: 10rpx;
    background-color: rgba(211, 211, 211, 0.356);
}
.submit{
    width: 60rpx;
}